        textarea.addEventListener('input', function() {
            // Check if content contains HTML tags
            const containsHTML = /<[a-z][\s\S]*>/i.test(this.value);
            
            if (containsHTML) {
                // Only sanitize if HTML tags detected
                this.value = DOMPurify.sanitize(this.value);

<link rel="stylesheet" href="/css/search.css">

<main class="search-page col-11 col-md-8 col-lg-5 pe-3 ps-3">
    <header>
        <h1>Search</h1>
    </header>
    <div class="w-100 d-flex justify-content-center align-items-center mt-2">
        <div class="form">
            <img class="icon" src="/images/icon/search.svg">
            <form id="search-form">
                <input type="text" class="form-control form-input" id="search-value" name="keyword" placeholder="Search">
                <input type="hidden" id="category" name="category" value="user">
            </form>
        </div>
    </div>
    <div class="search-settings">
        <div class="left-settings">
            <button type="button" class="tab active" data-category="user">User</button>
            <button type="button" class="tab" data-category="post">Post</button>
        </div>
    </div>
    <div id="search-results"></div>
</main>     

<link rel="stylesheet" href="/css/FeedDisplay.css">
<script src="/script/search.js"></script>